<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.BookingController">
   <children>
      <Label layoutX="600.0" layoutY="400.0" text="Please input the number of customers">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <Button fx:id="bookButton" layoutX="875.0" layoutY="620.0" mnemonicParsing="false" onMouseClicked="#bookingButtonClick" prefHeight="50.0" prefWidth="100.0" text="Book">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Label fx:id="amountLabel" alignment="CENTER_RIGHT" layoutX="860.0" layoutY="480.0" prefHeight="120.0" prefWidth="100.0" text="1">
         <font>
            <Font size="80.0" />
         </font>
      </Label>
      <Button fx:id="increaseButton" layoutX="770.0" layoutY="515.0" mnemonicParsing="false" onMouseClicked="#increaseButtonClick" prefHeight="50.0" prefWidth="50.0" text="+">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="decreaseButton" layoutX="1020.0" layoutY="515.0" mnemonicParsing="false" onMouseClicked="#decreaseButtonClick" prefHeight="50.0" prefWidth="50.0" text="-">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
