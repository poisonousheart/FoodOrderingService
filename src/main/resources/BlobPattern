        byte[] imageInByte;
        //read the image
        BufferedImage originalImage = ImageIO.read(new FileInputStream("C:\\Users\\Napat\\Desktop\\FoodOrderingService\\FoodOrderingService\\src\\main\\java\\sample\\Test.jpg"));

        //convert BufferedImage to byte array
        ByteArrayOutputStream byteOutS = new ByteArrayOutputStream();
        ImageIO.write(originalImage, "jpg", byteOutS);
        byteOutS.flush();
        imageInByte = byteOutS.toByteArray();
        byteOutS.close();

        //create blob
        Blob blob = new SerialBlob(imageInByte);
        System.out.println(blob);

        byte[] imgFromBlob = blob.getBytes(1,(int)blob.length());

        //convert byte array back to BufferedImage
        InputStream readedImage = new ByteArrayInputStream(imgFromBlob);
        BufferedImage bfImage = ImageIO.read(readedImage);
        Image image = SwingFXUtils.toFXImage(bfImage, null);
        Icon.setImage(image);
        System.out.println(bfImage);

        BufferedImage img = null;
        try {
            img = ImageIO.read(new ByteArrayInputStream(imageInByte));
        } catch (IOException e) {
            e.printStackTrace();
        }